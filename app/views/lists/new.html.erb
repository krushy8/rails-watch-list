<div class="navbar d-flex justify-content-between align-items-center px-3">
  <i class="fa-solid fa-film"></i>
  <div>
    <%= link_to "Back to lists", lists_path, class: "btn btn-primary" %>
    <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <h2>Make a new list</h2>
  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class: "btn btn-primary" %>
  <% end %>
</div>
