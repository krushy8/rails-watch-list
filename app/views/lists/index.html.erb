<div class="navbar d-flex justify-content-between align-items-center px-3">
  <i class="fa-solid fa-film"></i>
  <%= link_to "Create a list", new_list_path, class: "btn btn-primary" %>
</div>

<div class="container mt-4">
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm">

          <% if list.photo.attached? %>
            <div class="card-category d-flex align-items-center justify-content-center"
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
              url('<%= url_for(list.photo) %>');">

              <%= link_to list.name, list_path(list), class: "text-white text-decoration-none fw-bold" %>

            </div>
          <% else %>
            <div class="card-category bg-dark d-flex align-items-center justify-content-center">
              <%= link_to list.name, list_path(list), class: "text-white text-decoration-none fw-bold" %>
            </div>
          <% end %>

          <div class="card-body d-flex justify-content-between">
            <%= link_to "Add Bookmark", new_list_bookmark_path(list), class: "btn btn-sm btn-outline-primary" %>

            <%= link_to "Delete",
                list_path(list),
                class: "btn btn-sm btn-outline-danger",
                data: { turbo_method: :delete, turbo_confirm: "Delete this list?" } %>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>
